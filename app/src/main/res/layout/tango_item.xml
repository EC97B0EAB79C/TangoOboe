<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="30dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tango_re"
        android:background="@drawable/box_border"
        android:orientation="vertical">

        <com.example.senikaru.tangooboe.FuriganaView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tango_korean"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:id="@+id/tango_kanji"/>

        <com.example.senikaru.tangooboe.FuriganaView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:id="@+id/tango_kanji_hidden"/>
        <TextView
            android:layout_below="@id/tango_kanji_hidden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tango_korean"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:text="한자"
            />
    </RelativeLayout>

</LinearLayout>